<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="149dp"
        android:layout_marginTop="5dp"
        app:srcCompat="@drawable/employee" />

    <TextView
        android:id="@+id/Employee_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/employee_text"
        android:textStyle="italic"
        android:textSize="30sp"
        android:layout_gravity="center_horizontal"
        android:textColor="#030812"/>


    <ScrollView
        android:id="@+id/employee_scrollview"
        android:layout_width="match_parent"
        android:layout_height="261dp">

    </ScrollView>
    <Button
        android:id="@+id/goback_btn"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:text="@string/gobackbtn"
        android:layout_gravity="center_horizontal"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/transaction3" />


</LinearLayout>